<Window
    x:Class="LootManager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LootManager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Loot Manager"
    Width="800"
    Height="450"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid>
        <TabControl>
            <TabItem Header="Loot Generator" />
            <TabItem Header="Weapon Generator">
                <StackPanel Orientation="Horizontal">

                    <DockPanel>
                        <Button
                            x:Name="GenerateWeaponButton"
                            Width="100"
                            Height="100"
                            Margin="20"
                            Click="GenerateWeaponButton_Click"
                            DockPanel.Dock="Top">
                            <StackPanel>
                                <TextBlock
                                    x:Name="GenerateWeaponButtonText"
                                    FontSize="16"
                                    Text="Generate Weapon"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </Button>

                        <DataGrid
                            x:Name="dGrid"
                            AutoGenerateColumns="False"
                            ItemsSource="{Binding ViewModels.Weapon}"
                            SelectedItem="{Binding SelectedCells}">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="100"
                                    Binding="{Binding SelectedItem.Name}"
                                    Header="Name" />
                            </DataGrid.Columns>
                        </DataGrid>

                    </DockPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            Content="Name:" />

                        <Label
                            x:Name="WeaponName"
                            Grid.Row="0"
                            Grid.Column="1"
                            Width="100"
                            Content="{Binding Path=SelectedItem.Name, ElementName=WeaponsListView}" />

                    </Grid>

                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
