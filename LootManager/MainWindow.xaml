                            Width="100"
                            HorizontalContentAlignment="Center"
                            Content="Module" />

                        <Label
                            Grid.Row="3"
                            Grid.Column="5"
                            Width="100"
                            HorizontalContentAlignment="Center"
                            Content=" Module" />

                        <Label
                            Grid.Row="4"
                            Grid.Column="4"
                            Width="100"
                            HorizontalContentAlignment="Center"
                            Content="Module" />

                        <Label
                            Grid.Row="4"
                            Grid.Column="5"
                            Width="100"
                            HorizontalContentAlignment="Center"
                            Content=" Module" />

                        <Label
                            Grid.Row="5"
                            Grid.Column="4"
                            Width="100"
                            HorizontalContentAlignment="Center"
                            Content="Module" />

                        <Label
                            Grid.Row="5"
                            Grid.Column="5"
                            Width="100"
                            HorizontalContentAlignment="Center"
                            Content=" Module" />
                        <!--  To Be Implemented Still  -->

                        <!--  Maximum Clip Size  -->
                        <Label
                            Grid.Row="7"
                            Grid.Column="4"
                            Width="100"
                            HorizontalContentAlignment="Center"
                            Content="Clip" />

                        <Label
                            Grid.Row="7"
                            Grid.Column="5"
                            Width="100"
                            HorizontalContentAlignment="Center"
                            Content="{Binding Path=SelectedItem.MaximumClipSize, ElementName=dGrid}" />

                        <!--  Reload Speed  -->
                        <Label
                            Grid.Row="8"
                            Grid.Column="4"
                            Width="100"
                            HorizontalContentAlignment="Center"
                            Content="Reload Speed" />

                        <Label
                            Grid.Row="8"
                            Grid.Column="5"
                            Width="100"
                            HorizontalContentAlignment="Center"
                            Content="{Binding Path=SelectedItem.ReloadSpeed, ElementName=dGrid}" />

                        <!--  Ammo Type  -->
                        <Label
                            Grid.Row="9"
                            Grid.Column="4"
                            Width="100"
                            HorizontalContentAlignment="Center"
                            Content="Ammo" />

                        <Label
                            Grid.Row="9"
                            Grid.Column="5"
                            Width="100"
                            HorizontalContentAlignment="Center"
                            Content="{Binding Path=SelectedItem.AmmoType, ElementName=dGrid}" />

                        <!--  Picture  -->
                        <Image
                            Grid.Row="1"
                            Grid.RowSpan="3"
                            Grid.Column="6"
                            Grid.ColumnSpan="2" />

                        <!--  Weapon Type  -->
                        <Label
                            Grid.Row="4"
                            Grid.Column="6"
                            Width="100"
                            HorizontalContentAlignment="Center"
                            Content="Weapon Type" />

                        <Label
                            Grid.Row="4"
                            Grid.Column="7"
                            Width="100"
                            HorizontalContentAlignment="Center"
                            Content="{Binding Path=SelectedItem.WeaponType, ElementName=dGrid}" />

                        <!--  Model Type  -->
                        <Label
                            Grid.Row="5"
                            Grid.Column="6"
                            Width="100"
                            HorizontalContentAlignment="Center"
                            Content="Model Type" />

                        <Label
                            Grid.Row="5"
                            Grid.Column="7"
                            Width="100"
                            HorizontalContentAlignment="Center"
                            Content="{Binding Path=SelectedItem.ModelType, ElementName=dGrid}" />

                        <!--  Manufacturer  -->
                        <Label
                            Grid.Row="6"
                            Grid.Column="6"
                            Width="100"
                            HorizontalContentAlignment="Center"
                            Content="Manufacturer" />

                        <Label
                            Grid.Row="6"
                            Grid.Column="7"
                            Width="100"
                            HorizontalContentAlignment="Center"
                            Content="{Binding Path=SelectedItem.Manufacturer, ElementName=dGrid}" />

                        <!--  Damage Type  -->
                        <Label
                            Grid.Row="7"
                            Grid.Column="6"
                            Width="100"
                            HorizontalContentAlignment="Center"
                            Content="Damage Type" />

                        <Label
                            Grid.Row="7"
                            Grid.Column="7"
                            Width="100"
                            HorizontalContentAlignment="Center"
                            Content="{Binding Path=SelectedItem.DamageType, ElementName=dGrid}" />

                        <!--  Value  -->
                        <Label
                            Grid.Row="9"
                            Grid.Column="6"
                            Width="100"
                            HorizontalContentAlignment="Center"
                            Content="Value" />

                        <Label
                            Grid.Row="9"
                            Grid.Column="7"
                            Width="100"
                            HorizontalContentAlignment="Center"
                            Content="{Binding Path=SelectedItem.Value, ElementName=dGrid}" />

                    </Grid>

                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
