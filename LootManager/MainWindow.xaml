<Window x:Class="LootManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LootManager"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="Loot Manager" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Loot Generator">
                
            </TabItem>
            <TabItem Header="Weapon Generator">
                <StackPanel>
                    <Button 
                    x:Name="GenerateWeaponButton" 
                    Width="100" 
                    Height="100" 
                    Margin="20" 
                    Click="GenerateWeaponButton_Click" >
                        <StackPanel>
                            <TextBlock 
                                x:Name="GenerateWeaponButtonText"
                                FontSize="16" 
                                Text="Generate Weapon" 
                                TextWrapping="Wrap" 
                                TextAlignment="Center" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
